<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/fragment_login_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:hint="@string/name"
        android:inputType="textCapWords"/>

    <EditText
        android:id="@+id/fragment_login_password_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_login_name_input"
        app:layout_constraintRight_toRightOf="@+id/fragment_login_name_input"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_name_input"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="@string/password"
        android:inputType="number"/>

    <Button
        android:id="@+id/fragment_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/fragment_login_password_input"
        app:layout_constraintStart_toStartOf="@+id/fragment_login_password_input"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_password_input" />

</android.support.constraint.ConstraintLayout>